.selectAddress {
  margin-left: 8rpx;
  width: 210rpx;
  height: 40rpx;
  border-radius: 20rpx;
  line-height: 100rpx;
  padding: 5rpx;
  color: #00d59c;
}
.container {
  position: relative;
  right: -88px;
  top: -26px;
  width: 0px;
  /*  宽高设置为0，很重要，否则达不到效果 */
  height: 0px;
  border: 6px solid #00d59c;
  border-bottom-color: transparent;
  /* 设置透明背景色 */
  border-left-color: transparent;
  border-right-color: transparent;
}
